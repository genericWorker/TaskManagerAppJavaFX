<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.dccc.taskmanagerapp.TaskManagerController"
            stylesheets="@style.css" prefHeight="800.0" prefWidth="1000.0"
            style="-fx-background-color: #f4f7f6;">

    <padding>
        <Insets bottom="0.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <top>
        <VBox spacing="15" style="-fx-padding: 0 0 25 0;">
            <Label text="Task Manager" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

            <HBox spacing="12" alignment="CENTER_LEFT"
                  style="-fx-background-color: white;
                     -fx-padding: 12;
                     -fx-background-radius: 5;
                     -fx-border-radius: 5;
                     -fx-border-color: #dee2e6;
                     -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 8, 0, 0, 2);">

                <Label text="SEARCH TASKS:" style="-fx-font-size: 11px; -fx-font-weight: bold; -fx-text-fill: #7f8c8d;"/>
                <Label text="ðŸ”" style="-fx-font-size: 13px;"/>

                <TextField fx:id="txtSearch" promptText="Type keywords..." prefWidth="350.0"
                           onKeyReleased="#refreshTable"
                           style="-fx-background-color: #f1f3f4;
                              -fx-background-radius: 4;
                              -fx-border-radius: 4;
                              -fx-padding: 8;"/>

                <Region HBox.hgrow="ALWAYS" />

                <CheckBox fx:id="chkHideCompleted" text="Hide Completed"
                          onAction="#refreshTable" style="-fx-font-weight: bold; -fx-text-fill: #34495e;"/>
            </HBox>
        </VBox>
    </top>
    <center>
        <VBox VBox.vgrow="ALWAYS"
              style="-fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-width: 1;">

            <TableView fx:id="taskTable" VBox.vgrow="ALWAYS" style="-fx-background-radius: 0; -fx-border-color: transparent;">
                <columns>
                    <TableColumn fx:id="colTaskId" prefWidth="50.0" text="ID" />
                    <TableColumn fx:id="colSubject" prefWidth="280.0" text="Subject" />
                    <TableColumn fx:id="colPriority" prefWidth="100.0" text="Priority" />
                    <TableColumn fx:id="colStatus" prefWidth="120.0" text="Status" />
                    <TableColumn fx:id="colStartDate" prefWidth="110.0" text="Start Date" />
                    <TableColumn fx:id="colDueDate" prefWidth="110.0" text="Due Date" />
                    <TableColumn fx:id="colCompletedDate" prefWidth="110.0" text="Completed" />
                </columns>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
            </TableView>

            <HBox spacing="15" alignment="CENTER_LEFT"
                  style="-fx-padding: 6 20 6 20; -fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-width: 1 0 0 0;">
                <Label text="STATISTICS" style="-fx-font-size: 9px; -fx-text-fill: #95a5a6; -fx-font-weight: bold;"/>
                <ProgressBar fx:id="progressTasks" prefWidth="90.0" maxWidth="90.0" prefHeight="10.0" progress="0.0"
                             style="-fx-accent: #2ecc71; -fx-background-radius: 0;"/>
                <Label fx:id="lblStats" text="0/0 Done (0%)" style="-fx-font-size: 11px; -fx-text-fill: #495057; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="lblUrgentCount" text="Urgent: 0" style="-fx-font-size: 11px; -fx-text-fill: #e74c3c; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <VBox>
            <VBox spacing="12.0" style="-fx-padding: 15 0 12 0;">
                <GridPane hgap="15.0" vgap="8.0" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #dee2e6; -fx-border-width: 1;">
                    <columnConstraints>
                        <ColumnConstraints minWidth="80" /><ColumnConstraints hgrow="ALWAYS" />
                        <ColumnConstraints minWidth="80" /><ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>

                    <Label text="Subject:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold; -fx-font-size: 11px;"/>
                    <TextField fx:id="txtSubject" GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-background-radius: 0;"/>

                    <Label text="Priority:" GridPane.columnIndex="2" GridPane.rowIndex="0" style="-fx-font-weight: bold; -fx-font-size: 11px;"/>
                    <ComboBox fx:id="comboPriority" maxWidth="Infinity" GridPane.columnIndex="3" GridPane.rowIndex="0" style="-fx-background-radius: 0;"/>

                    <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold; -fx-font-size: 11px;"/>
                    <ComboBox fx:id="comboStatus" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-background-radius: 0;"/>

                    <Label text="Start Date:" GridPane.columnIndex="2" GridPane.rowIndex="1" style="-fx-font-weight: bold; -fx-font-size: 11px;"/>
                    <DatePicker fx:id="dpStart" maxWidth="Infinity" GridPane.columnIndex="3" GridPane.rowIndex="1" style="-fx-background-radius: 0;"/>

                    <Label text="Due Date:" GridPane.columnIndex="2" GridPane.rowIndex="2" style="-fx-font-weight: bold; -fx-font-size: 11px;"/>
                    <DatePicker fx:id="dpDue" maxWidth="Infinity" GridPane.columnIndex="3" GridPane.rowIndex="2" style="-fx-background-radius: 0;"/>
                </GridPane>

                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <Button fx:id="btnSubmit" text="SAVE TASK" onAction="#handleSave" prefHeight="35" prefWidth="120"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 0;"/>
                    <Button text="CLEAR" onAction="#handleClearForm" prefHeight="35"
                            style="-fx-background-color: #ffffff; -fx-text-fill: #2c3e50; -fx-border-color: #dee2e6; -fx-background-radius: 0;"/>

                    <Region HBox.hgrow="ALWAYS" />

                    <Button text="DELETE" onAction="#handleDeleteTask" prefHeight="35" prefWidth="100"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 0;"/>
                    <Button text="EXIT" onAction="#handleExit" prefHeight="35" prefWidth="80"
                            style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 0;"/>
                </HBox>
            </VBox>

            <HBox spacing="10" alignment="CENTER_LEFT"
                  style="-fx-padding: 5 15 5 15;
             -fx-background-color: #f1f3f5;
             -fx-border-color: #dee2e6;
             -fx-border-width: 1 0 0 0;">

                <Label fx:id="lblSystemMessage" text="SYSTEM READY"
                       style="-fx-font-size: 10px; -fx-text-fill: #95a5a6; -fx-font-weight: bold;"/>

                <Region HBox.hgrow="ALWAYS" />

                <Label fx:id="lblClock" text="2026-01-21"
                       style="-fx-font-size: 10px; -fx-text-fill: #95a5a6;"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>